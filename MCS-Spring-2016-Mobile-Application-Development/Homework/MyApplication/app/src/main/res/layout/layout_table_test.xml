<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:id="@+id/tblOrderedItems">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/lblSrNo"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="12dp"
        android:text="SrNo"
        android:gravity="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:padding="5dp"/>

        <TextView
            android:id="@+id/lblName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lblSrNo"
            android:textSize="12dp"
            android:text="Name"
            android:gravity="left"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/lblPricePerUnit"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lblQty"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp"
            android:text="Price"
            android:gravity="right"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/lblQty"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lblAmount"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp"
            android:text="Qty"
            android:gravity="right"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/lblAmount"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="12dp"
            android:text="Amount"
            android:gravity="right"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"/>

    </TableRow>
    </TableLayout>
</LinearLayout>
