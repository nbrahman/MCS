<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="spring16.cs442.com.obtchat_10">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateUser"
            android:label="@string/title_activity_add__user"
            android:theme="@style/Theme.Custom_theme1" />
        <activity
            android:name=".ChatList"
            android:label="@string/title_activity_chat_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Device_List"
            android:label="BT Chat+"
            android:theme="@style/Theme.Custom_theme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BluetoothChatFragment"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="BT Chat+"
            android:theme="@style/Theme.Custom_theme1"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name=".BlueToothSetting"
            android:label="@string/title_activity_blue_tooth_setting"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>
