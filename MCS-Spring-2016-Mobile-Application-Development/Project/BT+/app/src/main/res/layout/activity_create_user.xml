<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73258B"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs442.nbrahman.obt_chat.AddUser"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:layout_above="@+id/button"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:width="170dp"
                android:hint="User Name"
                android:background="@drawable/cu_usr_input_bk"
                android:backgroundTintMode="multiply"
                android:singleLine="true"
                android:textColorHint="#0e0e0e" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/cu_pwd_input_bk"
                android:singleLine="true"
                android:textColorHint="#0e0e0e" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:background="@drawable/cu_pwd_input_bk"
                android:singleLine="true"
                android:textColorHint="#0e0e0e" />

            <EditText
                android:id="@+id/etUserFullName"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:hint="Full User Name"
                android:inputType="textPersonName"
                android:background="@drawable/cu_usr_nm_input_bk"
                android:singleLine="true"
                android:textColorHint="#0e0e0e" />

            <EditText
                android:id="@+id/etEmailID"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:hint="Email ID"
                android:background="@drawable/cu_email_input_bk"
                android:singleLine="true"
                android:textColorHint="#0e0e0e"
                android:inputType="textEmailAddress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCreateUser"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="#beffe100"
                    android:text="CREATE USER"
                    android:textColor="#000000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:background="#beffe100"
                        android:text="CANCEL"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>
